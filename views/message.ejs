<%- include('partials/header.ejs') %>

<div class="row">
    <div class="col mt-5">

        <div class="card text-white text-center p-3">
            <blockquote class="blockquote mb-0 p-3">
                <h4 class="card-title"><%= message.title %> </h4>

                <p><%= message.message %></p>
                <footer class="blockquote-footer">
                    <small>
                        <%= message.postedBy.first_name + ' ' + message.postedBy.last_name %> -
                        <%= message.dateFormatted %>
                    </small>
                </footer>

                <div class="mt-4">
                    <% if ( String(currentUser._id) === String(message.postedBy._id) || currentUser.admin ) { %>
                    <form style="display: inline;" class="mr-3"
                        action="/messages/<%= message._id %>/delete?_method=DELETE" method="POST">
                        <input type="hidden" name="id" value="<%= message._id %>">
                        <button class="btn btn-danger my-2 my-sm-0" type="submit">Delete</button>
                    </form>
                    <% } %>
                    <a href="/">Cancel</a>
                </div>
            </blockquote>
        </div>

    </div>
</div>


<%- include('partials/footer.ejs') %>