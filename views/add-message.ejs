<%- include('partials/header.ejs') %>

<div class="row pt-5 justify-content-center">
    <div class="col-md-7">
        <h2 class="text-center mb-5">Reveal a secret</h2>

        <ul class="list-group text-danger">
            <% if (errors) { errors.forEach(error => {  %>
            <li class="list-group-item"><%= error.msg %></li>
            <% }); } %>
        </ul>

        <form class="mt-3" action="/messages/add" method="POST">
            <div class="form-group">
                <label for="username">Title</label>
                <input type="text" class="form-control" name="title" placeholder="Title of the message">
            </div>
            <div class="form-group">
                <label for="password">Message</label>
                <textarea class="form-control" rows="10" name="message"></textarea>
            </div>
            <button type="submit" class="btn btn-primary mr-3">Reveal</button>
        </form>
    </div>
</div>

<%- include('partials/footer.ejs') %>